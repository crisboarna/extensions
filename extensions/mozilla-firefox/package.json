{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "mozilla-firefox",
  "title": "Mozilla Firefox",
  "description": "Search and open tabs and history in Mozilla Firefox.",
  "icon": "firefox-logo.png",
  "author": "crisboarna",
  "categories": [
    "Applications",
    "Developer Tools",
    "Productivity",
    "System"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "firefox-go-to-tab",
      "title": "Search Tabs",
      "subtitle": "Mozilla Firefox",
      "description": "List all tabs and go to the selected.",
      "mode": "view"
    },
    {
      "name": "firefox-search-history",
      "title": "Search History",
      "subtitle": "Mozilla Firefox",
      "description": "Search browser history.",
      "mode": "view"
    },
    {
      "name": "firefox-new-tab",
      "title": "New Tab",
      "subtitle": "Mozilla Firefox",
      "description": "Open a new Google Chrome tab.",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.44.0",
    "@raycast/utils": "^1.4.8",
    "run-applescript": "6.0.0",
    "sql.js": "1.8.0"
  },
  "devDependencies": {
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "@types/sql.js": "1.4.4",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
